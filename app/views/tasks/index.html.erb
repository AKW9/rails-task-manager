<div >
  <h1>My Tasks</h1>
</div>
<div>
  <% @tasks.each do |task| %>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="flexCheck" <%= "checked" if task.completed %>>
      <label class="form-check-label" for="flexCheck">
        <%= link_to task.title, task_path(task), class: 'text-decoration-none text-black' %>
        <%= link_to task_path(task), data: { turbo_method: :delete, turbo_confirm: "Remove #{task.title}?" }, class: 'btn btn-danger' do %>
        <i class="fa-solid fa-trash"></i>
        <% end %>
      </label>
    </div>
  <% end %>
</div>
<div class="m-3 p-3">
  <%= link_to "Add a new task", new_task_path %>
</div>
