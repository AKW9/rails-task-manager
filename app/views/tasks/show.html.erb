<div class="banner m-3 p-3">
  <h1><%= @task.title %></h1>
  <%= link_to "Edit this task", edit_task_path%>
</div>
<div class="m-3 p-3">
  <%= @task.details %>
</div>
<div class="form-check m-3 p-3">
  <input class="form-check-input" type="checkbox" id="flexCheck" <%= "checked" if @task.completed %>>
  <label class="form-check-label" for="flexCheck">
    <%= @task.completed ? "Task completed" : "Task still in progress" %>
  </label>
</div>
<div class="m-3 p-3">
  <%= link_to "Back to list", tasks_path(), class: 'text-decoration-none text-black' %>
</div>
